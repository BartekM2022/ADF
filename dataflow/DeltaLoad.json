{
	"name": "DeltaLoad",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "Inventory",
						"type": "DatasetReference"
					},
					"name": "Inventory"
				},
				{
					"dataset": {
						"referenceName": "Staging",
						"type": "DatasetReference"
					},
					"name": "Staging"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "New"
				},
				{
					"name": "Delete"
				},
				{
					"name": "Update"
				}
			],
			"scriptLines": [
				"source(output(",
				"          ID as integer,",
				"          Number as integer,",
				"          Data1 as string,",
				"          Data2 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> Inventory",
				"source(output(",
				"          ID as integer,",
				"          Number as integer,",
				"          Data1 as string,",
				"          Data2 as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     isolationLevel: 'READ_UNCOMMITTED',",
				"     format: 'table') ~> Staging",
				"Inventory, Staging exists(ERROR_FUNCTION('') == ERROR_FUNCTION(''),",
				"     negate:true,",
				"     broadcast: 'auto')~> New",
				"Inventory, Staging exists(ERROR_FUNCTION('') == ERROR_FUNCTION(''),",
				"     negate:true,",
				"     broadcast: 'auto')~> Delete",
				"Inventory, Staging exists(Inventory@Number==Staging@Number && (Inventory@Data1!=Staging@Data1 ||Inventory@Data2!=Staging@Data2),",
				"     negate:false,",
				"     broadcast: 'left')~> Update"
			]
		}
	}
}